#prices
	padding 170px 0
	background-image: url(../img/backs/know.png)
	background-repeat: no-repeat
	background-position: center
	background-size: 100% 100%
	@media screen and (max-width: 560px)
		padding 60px 0
		background-color #E1D2C8
		background-image: none
	@media screen and (max-width: 386px)
		padding 40px 0
.general-img-packets-1
	top -100px
	left -100px
.general-img-packets-2
	bottom: 200px
	right 0
.packet
	width 100%
	max-width 380px
	margin 0 auto 35px
	background-color: #fff
	border-radius 15px
	border 3px solid #3F8FD2
	padding 30px 20px
	&-head
		padding 0 0 20px
		position relative
		margin: 0 0 20px
		&:before
			content: ''
			display block
			position absolute
			width 200px
			height: 3px
			background-color: #3F8FD2
			left 0
			bottom 0
			right 0
			margin 0 auto
		&-title
			font-family: L
			font-size: 32px
			color #B18663;
			text-align center
			small
				display block
				font-size: 16px
	&-body
		min-height 550px
		&-text
			text-align: justify
			span
				display block
				font-weight bold
				margin-top: 10px
		&-list
			li
				list-style: none
				position relative
				padding-left: 20px
				margin-bottom: 5px
				small
					display block
					font-size: 16px
				&:before
					content: ''
					display block
					position absolute
					top 9px
					left 0
					width 10px
					height: 10px
					border-radius 30px
					background-color: #3F8FD2
				a
					display block
					width 110px
					color #B18663
					transition: all .2s ease
					&:focus
						text-transform none
						color #B18663
					&:hover
						color #B18663
						opacity .8
	&-footer
		position relative
		padding 20px 0 0
		margin 20px 0 0
		text-align center
		&:before
			content: ''
			display block
			position absolute
			width 200px
			height: 3px
			background-color: #3F8FD2
			left 0
			top 0
			right 0
			margin 0 auto
.cost
	text-align center
	font-family: L
	font-size: 22px
	margin-bottom: 20px
	span
		display block
		font-size: 44px
	&-full
		span
			text-decoration line-through
			&.unbroken
				text-decoration none
	&-sale
		color red
	&-today
		color limegreen
.prepayment
	text-align center
	margin-bottom: 50px
	@media screen and (max-width 560px)
		margin-bottom: 35px
	&-title
		font-family: L
		font-size: 50px
		color red
		line-height: 1.3
		@media screen and (max-width 560px)
			font-size: 36px
	&-text
		font-size: 20px
		margin 20px 0 30px
		@media screen and (max-width 560px)
			font-size: 18px
			margin 15px 0 20px
.timer-title
	font-family: L
	font-size: 50px
	color red
	line-height: 1.3
	text-align center
	@media screen and (max-width 560px)
		font-size: 32px
		line-height: 1.3
	@media screen and (max-width 385px)
		font-size: 26px
.flip-clock-wrapper
	font-family: G
	width: 100%
	max-width 460px
	margin-top: 30px
	ul
		background: transparent
		li
			line-height: 97px
.flip-clock-divider .flip-clock-label
	color #000
	font-family: S
	font-weight: normal
.flip-clock-dot
	background-color: #D1B496
	box-shadow: none
.flip-clock-wrapper ul li a div div.inn
	color: #fff
	font-family: G
	font-weight: bold
	background-color: #D1B496
	text-shadow: none
	border-radius 20px
.flip-clock-wrapper ul li a div.down
	border-bottom-right-radius 20px
	border-bottom-left-radius 20px
	font-family: G
.flip-clock-wrapper .flip
	box-shadow: none
@media screen and (max-width 560px)
	.flip-clock-wrapper
		width 100%
		max-width 260px
		margin-top: 20px
	.flip-clock-wrapper ul
		height 50px
		margin 3px
	.flip-clock-wrapper ul li
		line-height: 50px
	.flip-clock-wrapper ul li a div.up::after
		top 24px
	.flip-clock-wrapper ul li a div div.inn
		font-size: 40px
	.flip-clock-divider
		height 50px
	.flip-clock-dot
		width 7px
		height 7px
		left 3px
	.flip-clock-dot.top
		top 31px
	.flip-clock-dot.bottom
		bottom: 27px
	.flip-clock-divider .flip-clock-label
	.flip-clock-divider.minutes .flip-clock-label
	.flip-clock-divider.seconds .flip-clock-label
		font-size:  10px
		right: -59px