#main
	padding 40px 0 0
	@media screen and (max-width: 991px)
		padding 0
		text-align: center
	@media screen and (max-width: 767px)
		padding 0 0 60px
	@media screen and (max-width: 386px)
		padding 0 0 40px
.main
	&-img
		position relative
		padding-top: 100%
		@media screen and (max-width: 991px)
			padding 0
		&-1
			position absolute
			top -60px
			right -190px
			@media screen and (max-width: 991px)
				display block
				position: static
				width 100%
				max-width 480px
				margin 30px auto 0
		&-2
			position absolute
			top: -100px
			left 0
			width auto
			@media screen and (max-width: 1199px)
				left -265px
			@media screen and (max-width: 991px)
				left 0
	&-pre
		font-size: 16px
		margin-bottom: 20px
	&-title
		font-family: L
		font-size: 68px
		line-height: 80px
		color #B18663
		position relative
		@media screen and (max-width: 991px)
			text-align center
			font-size: 54px
			line-height: inherit
		@media screen and (max-width: 560px)
			font-size: 42px
		@media screen and (max-width: 386px)
			font-size: 36px
		small
			position absolute
			border-radius: 50%
			width 200px
			height: 200px
			color #3F8FD2
			border 3px solid #3F8FD2
			top -60px
			right -20px
			text-align center
			font-size: 20px
			display flex
			align-items: center
			justify-content: center
			line-height: 2.1
			@media screen and (max-width: 1199px)
				right -140px
			@media screen and (max-width: 991px)
				position relative
				left 0
				top 0
				margin 0 auto 50px
			@media screen and (max-width: 560px)
				width 140px
				height: 140px
				font-size: 16px
			&:before
				content: ''
				display block
				position absolute
				width 100px
				height: 3px
				background-color: #3F8FD2
				top calc(50% - 2px)
				left -90px
				@media screen and (max-width: 991px)
					transform: rotate(90deg)
					right 0
					left 0
					top auto
					bottom -10px
					margin 0 auto
					width 50px
					height: 2px
			&:after
				content ''
				display block
				position absolute
				width 16px
				height: 16px
				border-top: 2px solid #3F8FD2
				border-right 2px solid #3F8FD2
				transform: rotate(-135deg)
				top calc(50% - 8px)
				left -90px
				@media screen and (max-width: 991px)
					transform: rotate(135deg)
					right 0
					left 0
					margin 0 auto
					top auto
					bottom -32px
	&-info
		position relative
		margin-top: 40px
		@media screen and (max-width: 991px)
			margin-top: 25px
		&-date
			text-align center
			font-size: 32px
			font-weight: bold
			color #3F8FD2
			position relative
			display inline-block
			@media screen and (max-width: 991px)
				font-size: 28px
			@media screen and (max-width: 560px)
				font-size: 22px
			&:before
				content: ''
				display block
				position absolute
				width 100%
				height: 3px
				background-color: #3F8FD2
				bottom: 0
				right 0
				@media screen and (max-width: 991px)
					width 90%
					margin 0 auto
					left 0
				@media screen and (max-width: 386px)
					width 100px
					margin 0 auto
					left 0
					right 0
		&-author
			font-size: 22px
			font-weight: bold
			color #B18663
			margin-bottom: 50px
			@media screen and (max-width: 991px)
				text-align center
			@media screen and (max-width: 560px)
				font-size: 20px