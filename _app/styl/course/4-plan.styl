#plan
	padding 90px 0
	@media screen and (max-width: 560px)
		padding 60px 0
	@media screen and (max-width: 386px)
		padding 40px 0
.general-img-plan-1
	top 0
	right -17%
	@media screen and (max-width: 386px)
		right -140px
.general-img-plan-2
	top 50%
	left -30%
	@media screen and (max-width: 386px)
		z-index -1
.general-img-plan-3
	bottom: -90px
	right -17%
	@media screen and (max-width: 386px)
		z-index -1
.plan-packet-wrapper
	margin 60px 0
	padding 40px 0
	position relative
	@media screen and (max-width: 560px)
		padding 20px 0
		margin 40px 0
	&:before
		content: ''
		display block
		position absolute
		width 70%
		height: 100%
		margin 0 auto
		top 0
		left 0
		right 0
		background-image: linear-gradient(97.67deg, #D4C1B3 8.58%, #F7E5D9 103.7%);
		border-radius: 35px
		@media screen and (max-width: 560px)
			width 80%
.plan-packet
	background-color #fff
	border-radius: 35px
	padding 35px 45px
	position relative
	overflow hidden
	display table
	width 100%
	@media screen and (max-width: 991px)
		display block
	@media screen and (max-width: 560px)
		padding 30px
	@media screen and (max-width: 386px)
		padding 20px
	&-title
		font-family: L
		font-size: 24px
		font-weight bold
		color #B18663
		// margin-bottom: 30px
		@media screen and (max-width: 560px)
			font-size: 30px
			margin-bottom: 20px
		@media screen and (max-width: 386px)
			font-size: 24px
			margin-bottom: 10px
		&-modal
			margin-top: 40px
	&-subtitle
		font-size: 20px
		font-weight bold
		margin:30px 0 20px
.button-plan
	margin-top: 100px
	@media screen and (max-width: 991px)
		margin-top: 50px
	@media screen and (max-width: 560px)
		margin-top: 20px