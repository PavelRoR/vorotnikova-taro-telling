#for
	padding 160px 0 90px
	background-image: url(../img/backs/backwrap-1.png)
	background-repeat: no-repeat
	background-position: center
	background-size: 100% 100%
	@media screen and (max-width: 991px)
		padding 90px 0
	@media screen and (max-width: 767px)
		background-image: none
		background-color: #F4EBE3
	@media screen and (max-width: 560px)
		padding 60px 0
	@media screen and (max-width: 386px)
		padding 40px 0
.general-img-for
	top 300px
	right -100px
	@media screen and (max-width: 560px)
		width 120px
		bottom -70px
		z-index -1
.for-list
	position relative
	margin-bottom: 70px
	@media screen and (max-width: 560px)
		margin-bottom: 40px
	@media screen and (max-width: 386px)
		margin-bottom: 20px
	li
		padding-left: 70px
		list-style none
		font-size: 20px
		padding-bottom: 40px
		position relative
		span
			font-weight bold
		@media screen and (max-width: 991px)
			padding-left: 40px
		@media screen and (max-width: 560px)
			font-size: 18px
			padding-bottom: 20px
		&:before
			content: ''
			display block
			position absolute
			width 3px
			// height: 91%
			height: 100%
			background-color: #B18663
			top 0
			left 11px
			// @media screen and (max-width: 991px)
			// 	height: 90%
		&:after
			content: ''
			display block
			position absolute
			width 24px
			height: 24px
			border-radius: 50px
			border 3px solid #B18663
			background-color: #F3EBE4
			top 0
			left 0
		&:last-child
			&:before
				content: none