#records
	padding 90px 0
	background-image: url(../img/backs/backwrap-2.png)
	background-repeat: no-repeat
	background-position: center bottom
	background-size: 100% auto
	@media screen and (max-width 560px)
		padding 60px 0
	@media screen and (max-width 386px)
		padding 40px 0
.general-img-recs-1
	left: -200px
	top -200px
	z-index -1
.video
	width 100%
	max-width 560px
	margin 0 auto 40px
	@media screen and (max-width 386px)
		margin-bottom: 25px
	&-title
		font-size: 20px
		font-weight: bold
		margin-bottom: 20px
		text-align center
		@media screen and (max-width 386px)
			margin-bottom: 15px
	&-text
		margin-top: 10px
.records-text
	font-size: 24px
	text-align center
	margin-bottom: 30px
	@media screen and (max-width 560px)
		font-size: 20px