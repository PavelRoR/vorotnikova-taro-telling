footer
	padding 20px 0
	text-align: center
	background-color: rgba(#eee,.7)
	font-size: 14px
	h5
		font-size: 20px;
		margin 0
		font-family: G
		font-weight: bold
	p
		line-height: 1.3
	@media screen and (max-width 560px)
		padding 10px 0
		font-size: 12px
		h5
			font-size: 18px
.conditions
	color #000
	text-decoration: underline
	&:focus
		color #000
		text-decoration: underline
	&:hover
		color: #000
		text-decoration: none
.soc-buttons
	width 100%
	margin: 0 auto
	a
		display: inline-block
		margin: 15px 7px 10px
		width: 29px;
		height: 29px;
		background-image url(../img/icons/soc-buttons.png)
		background-repeat no-repeat
		transition all .3s ease
		@media screen and (max-width 560px)
			margin 10px 5px
		&:hover
			opacity .9
			transform: translateY(-3px)
		&:nth-of-type(1)
			background-position: 0 0
		&:nth-of-type(2)
			background-position: -29px 0
		&:nth-of-type(3)
			background-position: -58px 0