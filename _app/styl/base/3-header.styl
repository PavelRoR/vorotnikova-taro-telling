header
	overflow hidden
	padding 20px 0
	margin-bottom: 40px
	@media screen and (max-width 991px)
		&.header-min
			margin-bottom: 0
	@media screen and (max-width 560px)
		padding 15px 0
		margin-bottom: 20px
.header-logo
	float left
	margin-top: 4px
	img
		width auto
	@media screen and (max-width 991px)
		display block
		float: none
		margin 0 auto 5px
		width 220px
		img
			width 100%
	@media screen and (max-width: 386px)
		width 130px
.contacts
	float: right
	text-align right
	width 280px
	display table
	@media screen and (max-width 991px)
		float: none
		text-align center
		margin 0 auto
		width 220px
.contact
	line-height: 1
	font-size: 16px
	font-family: G
	color #000
	display table-cell
	@media screen and (max-width 991px)
		line-height: 1
		font-size: 12px
	&:focus
		text-decoration none
		color #000
	&:hover
		text-decoration underline
		color #000
.header-min
	.contact
		line-height: 36px
		@media screen and (max-width 991px)
			line-height: 1.1
.menu
	float: right
	text-align right
	display table
	list-style none
	@media screen and (max-width 991px)
		width: 200px;
		background-color: #fff;
		height: 100vh;
		position: absolute;
		top: 0;
		left: -100%;
		z-index: 200;
		padding: 20px;
		transition: all .3s ease
	li
		display table-cell
		@media screen and (max-width 991px)
			display: block;
			text-align: left;
			margin-bottom: 10px;
		a
			padding-left: 10px
			font-family: S
			font-size: 16px
			color #B18663
			transition: all .3s ease
			&:focus
				color #B18663
			&:hover
				opacity .6
.mobile-menu
	display: none;
	position: absolute;
	width: 30px;
	height: 25px;
	padding: 5px;
	top 30px
	right: 40px;
	cursor: pointer;
	z-index: 200;
	@media screen and (max-width: 991px)
		display block
	@media screen and (max-width: 386px)
		top 15px
		right 15px
	&-line
		width: 100%;
		height: 3px;
		background-color: #3f8fd2
		position: absolute;
		transition: all .4s ease
		&-1
			top 0
			&.switched
				transform: rotate(45deg)
				top 13px
				right: 0;
				left: 0;
				width: 42px;
		&-2
			height: 2px;
			top calc(50% - 1px)
			&.switched
				opacity: 0;
		&-3
			bottom: 0
			&.switched
				transform: rotate(-45deg)
				top 13px
				left: 0;
				right: 0;
				width: 42px;
.nav-active
	left: 0 !important;