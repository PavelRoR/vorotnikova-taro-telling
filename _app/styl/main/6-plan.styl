#plan
	padding 90px 0
	@media screen and (max-width: 560px)
		padding 60px 0
	@media screen and (max-width: 386px)
		padding 40px 0
.general-img-plan-1
	top 0
	right -17%
	@media screen and (max-width: 386px)
		right -140px
.general-img-plan-2
	top 500px
	left -30%
	@media screen and (max-width: 386px)
		z-index -1
.general-img-plan-3
	bottom: -90px
	right -17%
	@media screen and (max-width: 386px)
		z-index -1
.day-wrapper
	margin 60px 0
	padding 40px 0
	position relative
	@media screen and (max-width: 560px)
		padding 20px 0
		margin 40px 0
	&:before
		content: ''
		display block
		position absolute
		width 70%
		height: 100%
		margin 0 auto
		top 0
		left 0
		right 0
		background-image: linear-gradient(97.67deg, #D4C1B3 8.58%, #F7E5D9 103.7%);
		border-radius: 35px
		@media screen and (max-width: 560px)
			width 80%
.day
	background-color #fff
	border-radius: 35px
	padding 35px 45px
	position relative
	overflow hidden
	display table
	width 100%
	@media screen and (max-width: 991px)
		display block
	@media screen and (max-width: 560px)
		padding 30px
	@media screen and (max-width: 386px)
		padding 20px
	&-info
		display table-cell
		padding-right: 20px
		width auto
		@media screen and (max-width: 991px)
			display block
			padding-right: 0
		&-title
			font-size: 40px
			font-weight bold
			color #B18663
			margin-bottom: 30px
			@media screen and (max-width: 560px)
				font-size: 30px
				margin-bottom: 20px
			@media screen and (max-width: 386px)
				font-size: 24px
				margin-bottom: 10px
.day-bonus
	display table-cell
	vertical-align: middle
	// float: right
	// display flex
	// justify-content: center
	// align-items: center
	// flex-direction: column
	width 32%
	height: 100%
	color #fff
	border-radius 35px
	background-color #B18663;
	padding 30px
	text-align center
	@media screen and (max-width: 991px)
		display block
		width auto
		margin-top: 30px
		text-align left
	@media screen and (max-width: 560px)
		margin-top: 20px
	@media screen and (max-width: 386px)
		padding 20px
	&-title
		font-size: 40px
		font-weight bold
		margin-bottom: 40px
		@media screen and (max-width: 991px)
			margin-bottom: 10px
			font-size: 30px
		@media screen and (max-width: 560px)
			font-size: 24px
		@media screen and (max-width: 386px)
			margin-bottom: 0
	&-text
		font-size: 22px
		@media screen and (max-width: 560px)
			font-size: 18px
.button-plan
	margin-top: 100px
	@media screen and (max-width: 991px)
		margin-top: 50px
	@media screen and (max-width: 560px)
		margin-top: 20px