#plan
	padding 90px 0
.general-img-plan-1
	top 0
	right -17%
.general-img-plan-2
	top 500px
	left -30%
.general-img-plan-3
	bottom: -90px
	right -17%
.day-wrapper
	margin 60px 0
	padding 40px 0
	position relative
	&:before
		content: ''
		display block
		position absolute
		width 70%
		height: 100%
		margin 0 auto
		top 0
		left 0
		right 0
		background-image: linear-gradient(97.67deg, #D4C1B3 8.58%, #F7E5D9 103.7%);
		border-radius: 35px
.day
	background-color #fff
	border-radius: 35px
	padding 35px 45px
	position relative
	overflow hidden
	display table
	width 100%
	&-info
		display table-cell
		padding-right: 20px
		width auto
		&-title
			font-size: 40px
			font-weight bold
			color #B18663
			margin-bottom: 30px
.day-bonus
	display table-cell
	vertical-align: middle
	// float: right
	// display flex
	// justify-content: center
	// align-items: center
	// flex-direction: column
	width 32%
	height: 100%
	color #fff
	border-radius 35px
	background-color #B18663;
	padding 30px
	text-align center
	&-title
		font-size: 40px
		font-weight bold
		margin-bottom: 40px
	&-text
		font-size: 22px
