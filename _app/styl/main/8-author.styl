#author
	padding 140px 0
.author-name
	position relative
	text-align right
	font-size: 30px
	font-weight bold
	color: #3F8FD2
	margin-bottom: 50px
	padding-top: 10px
	&:before
		content: ''
		display block
		position absolute
		top 0
		width 103%
		height: 3px
		background-color: #3F8FD2
	&:after
		content: ''
		display block
		position absolute
		right -3%
		width 16px
		height: 16px
		border-top: 2px solid #3F8FD2
		border-right 2px solid #3F8FD2
		transform: rotate(45deg)
		top calc(-50% +22px)
.author-img
	position relative
	&-1
		position absolute
		left -100px
		top -200px
	&-2
		position absolute
		width 100%
		top 0
		right 0