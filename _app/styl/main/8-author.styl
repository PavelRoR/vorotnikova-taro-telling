#author
	padding 140px 0
	@media screen and (max-width: 560px)
		padding 60px 0
	@media screen and (max-width: 386px)
		padding 40px 0
.author-name
	position relative
	text-align right
	font-size: 30px
	font-weight bold
	color: #3F8FD2
	margin-bottom: 50px
	padding-top: 10px
	@media screen and (max-width: 991px)
		text-align left
	@media screen and (max-width: 560px)
		font-size: 20px
		margin-bottom: 30px
	&:before
		content: ''
		display block
		position absolute
		top 0
		width 103%
		height: 3px
		background-color: #3F8FD2
		@media screen and (max-width: 991px)
			width 90%
	&:after
		content: ''
		display block
		position absolute
		right -3%
		width 16px
		height: 16px
		border-top: 2px solid #3F8FD2
		border-right 2px solid #3F8FD2
		transform: rotate(45deg)
		top calc(-50% +22px)
		@media screen and (max-width: 991px)
			content: none
.author-img
	position relative
	&-1
		position absolute
		left -100px
		top -200px
		@media screen and (max-width: 560px)
			z-index -1
			top 0
	&-2
		position absolute
		width 100%
		top 0
		right 0
		@media screen and (max-width: 991px)
			position: static
			display block
			width 100%
			max-width 700px
			margin 0 auto 35px