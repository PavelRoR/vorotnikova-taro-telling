.slick-prev
.slick-next
	width 80px
	height: 80px
	border-radius 50%
	text-align center
	background-color: #fff
	border 3px solid #B18663
	color #B18663
	transition: all .3s ease
	z-index 200
	font-size: 40px;
	line-height: 40px;
	// top auto
	// bottom: -130px
	&:focus
		background-color: #fff
		color #B18663
	&:hover
		background-color: #B18663
		color #fff
	&:before
	&:after
		content none
	@media screen and (max-width: 991px)
		width 60px
		height: 60px
.slick-prev
	left 30.8%
	@media screen and (max-width 767px)
		left 18%
	@media screen and (max-width: 560px)
		left 0
.slick-next
	right 30.8%
	@media screen and (max-width 767px)
		right 18%
	@media screen and (max-width: 560px)
		right 0
.video-wrapper-rev
	width 100%
	max-width 560px
	margin 0 auto 40px
	@media screen and (max-width: 560px)
		margin-bottom: 20px
.yt-button
	position absolute
	cursor pointer
	left: calc(50% - 34px);
	top: calc(50% - 24px);
	&:before
		content: ''
		display block
		position: absolute;
		// left: calc(50% - 34px);
		// top: calc(50% - 124px);
		width: 68px;
		height: 48px;
		border-radius 7px
		background-color: rgba(0,0,0,.7)
		transition: all .15s ease
		z-index 68
		@media screen and (max-width 560px)
			background-color: #FF0000
	&:hover
		&:before
			background-color: #FF0000
	&:after
		content: ''
		display block
		position absolute
		border: 10px solid transparent;
		border-left: 18px solid #fff
		width 10px
		height 10px
		// left: calc(50% - 8px);
		// top: calc(50% - 110px);
		left: 27px
		top: 15px
		z-index 70