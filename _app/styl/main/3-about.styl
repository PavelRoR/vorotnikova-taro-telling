#about
	padding 90px 0 180px
	@media screen and (max-width: 991px)
		padding 0 0 90px
	@media screen and (max-width: 560px)
		padding 0 0 60px
.general-img-about
	bottom -170px
	left -60px
	width 160px
	@media screen and (max-width: 991px)
		bottom: 70px
		z-index -1
	@media screen and (max-width: 560px)
		width 120px
		bottom -70px
.about-list
	position relative
	margin-bottom: 70px
	@media screen and (max-width: 560px)
		margin-bottom: 40px
