	li
		padding-left: 70px
		list-style none
		font-size: 20px
		padding-bottom: 40px
		position relative
		@media screen and (max-width: 991px)
			padding-left: 40px
		@media screen and (max-width: 560px)
			font-size: 18px
			padding-bottom: 20px
		&:before
			content: ''
			display block
			position absolute
			width 3px
			// height: 91%
			height: 100%
			background-color: #B18663
			top 0
			left 11px
			// @media screen and (max-width: 991px)
			// 	height: 90%
		&:after
			content: ''
			display block
			position absolute
			width 24px
			height: 24px
			border-radius: 50px
			border 3px solid #B18663
			background-color: #F3EBE4
			top 0
			left 0
		&:last-child
			&:before
				content: none
.about-img
	margin-top: 50px
	width 380px
	@media screen and (max-width: 991px)
		position absolute
		top: -200px
		right  -100px
		width 100%
		max-width 300px
	@media screen and (max-width: 386px)
		z-index -1
		right -150px