#main
	padding 40px 0 0
.main
	&-img
		position relative
		padding-top: 100%
		&-1
			position absolute
			bottom: 0
			right -100px
		&-2
			position absolute
			top: 0
			left 0
			width 100%
	&-pre
		position absolute
		border-radius: 50%
		width 200px
		height: 200px
		color #3F8FD2
		border 3px solid #3F8FD2
		top -20px
		left -210px
		text-align center
		font-size: 20px
		display flex
		align-items: center
		justify-content: center
		&:before
			content: ''
			display block
			position absolute
			width 100px
			height: 3px
			background-color: #3F8FD2
			top calc(50% - 2px)
			right -90px
		&:after
			content ''
			display block
			position absolute
			width 16px
			height: 16px
			border-top: 2px solid #3F8FD2
			border-right 2px solid #3F8FD2
			transform: rotate(45deg)
			top calc(50% - 8px)
			right -90px
	&-title
		font-family: L
		font-size: 68px
		text-align right
		line-height: 80px
		color #B18663
	&-subtitle
		font-size: 22px
		text-align right
	&-info
		position relative
		margin-top: 40px
		&-date
			text-align center
			font-size: 32px
			font-weight: bold
			color #3F8FD2
			position relative
			&:before
				content: ''
				display block
				position absolute
				width 110%
				height: 3px
				background-color: #3F8FD2
				bottom: 0
				right 0
			&:after
				content: ''
				display block
				position absolute
				width 16px
				height: 16px
				border-top: 2px solid #3F8FD2
				border-left 2px solid #3F8FD2
				transform: rotate(-45deg)
				bottom: -7px
				left -10%
		&-author
			text-align right
			font-size: 22px
			font-weight: bold
			color #B18663
.form
	&-main
		width 100%
		max-width 468px
		margin 40px 0 0 auto
.form-title
	text-align center
	font-size: 26px
	font-weight: bold
	margin-bottom: 10px
.input
	display inline-block
	width 100%
	border: 3px solid #3F8FD2;
	border-radius: 38px;
	font-size: 20px
	font-weight: 200
	color #D4C1B3
	padding 12px 69px
	background-color: #FFFBF6
	margin-bottom: 10px
::-webkit-input-placeholder
::-moz-placeholder
:-moz-placeholder
:-ms-input-placeholder
	color:#D4C1B3
	opacity:1;
@-webkit-keyframes autofill
	to
		font-size: 20px
		color: #D4C1B3;
		background-color: #FFFBF6
input:-webkit-autofill
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
.input:active
input:-internal-autofill-selected
	background-color: #FFFBF6 !important
.alert-message
	clear both
	display: none;
	font-size: 16px;
	padding-top: 10px;
	color: #f00
	text-align: center
	font-weight: 600
	line-height: 1
.checking
	display: table;
	width 100%
	margin: 5px auto 0
	text-align: left
	&-main
		margin-left: 0
		@media screen and (max-width 991px)
			margin-left: auto
	@media screen and (max-width 560px)
		max-width 300px
@keyframes pulse
	0%
		box-shadow: 0 0 0 0 rgba(red, .12)
	100%
		box-shadow: 0 0 15px 10px rgba(red, .12)
.checking .check-label
	line-height: 27px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 30px;
	text-align: left;
	font-size: 13px
	color #aaa
	@media screen and (max-width 560px)
		line-height: 18px
.checking .check-label a
	text-decoration: none
	border-bottom: 1px dashed
	display: inline
	color #aaa
	&:focus
		border-bottom: 1px dashed
		color #aaa
	&:hover
		border-bottom: none
		text-decoration: none
		color #5c5b5b
.checking .check-label:before
	content: '';
	background-color: red;
	position: absolute;
	left: 0;
	top: 3px;
	width: 20px;
	height: 20px;
	border none
	border-radius: 2px
	animation: pulse
	animation-duration: .7s
	animation-iteration-count: infinite
	animation-timing-function: ease-out;
.checking .check-label:after
	content: '';
	position: absolute;
	left: 6px;
	top: -10px;
	width: 8px;
	height: 14px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 2px solid #fff;
	border-right: 2px solid #fff;
	-webkit-transform: rotate(41deg);
	-ms-transform: rotate(41deg);
	transform: rotate(41deg);
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
.check
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
.check:checked + .check-label:before
	background-color: #3f8fd2
	animation: none
.check:checked + .check-label:after
	opacity: 1;
	top: 4px;
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;